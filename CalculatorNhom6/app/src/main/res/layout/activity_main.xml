<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:stretchColumns="*"
    android:background="#FFFFFF">
    <TableRow>
        <TextView
            android:maxLines = "1"
            android:hint="Hiển thị phép tính"
            android:id="@+id/tvphepTinh"
            android:padding="10dp"
            android:gravity="right"
            android:layout_span="4"/>
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/tvketQua"
            android:layout_span="4"
            android:background="#FFF"
            android:cursorVisible="false"
            android:gravity="right"
            android:paddingTop="60dp"
            android:paddingBottom="55dp"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:text="0"
            android:textColor="#000"
            android:textSize="40sp" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnRong"
            android:layout_span="3"
            android:textColor="#FFF"
            android:background="#636363"
            />
        <Button
            android:id="@+id/btnDelete"
            android:text="Del"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:background="@drawable/changebackground_toantu" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btnChia"
            android:text="/"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changebackground_toantu"
            android:textColor="#FFF"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btnNhan"
            android:text="*"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changebackground_toantu"
            android:textColor="#FFF" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn3"
            android:padding="30dp"
            android:text="3"
            android:textSize="30sp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btnTru"
            android:background="@drawable/changebackground_toantu"
            android:padding="30dp"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnCham"
            android:text="."
            android:textSize="30sp"
            android:padding="30dp"

            android:background="@drawable/changbackground"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btn0"
            android:padding="30dp"
            android:text="0"
            android:textColor="#FFF"
            android:background="@drawable/changbackground"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btnBang"
            android:text="="
            android:textSize="30sp"
            android:padding="30dp"
            android:background="@drawable/changbackground"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/btnCong"
            android:background="@drawable/changebackground_toantu"
            android:padding="30dp"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </TableRow>

    <LinearLayout></LinearLayout>
</TableLayout>